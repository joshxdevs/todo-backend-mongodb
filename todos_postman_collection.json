{
  "info": {
    "_postman_id": "todo-mongodb-backend-ready",
    "name": "Todo MongoDB Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","signup"]
        }
      }
    },
    {
      "name": "Signin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/signin",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","signin"]
        }
      }
    },
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "{{JWT_TOKEN}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Learn MongoDB\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/todo",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["todo"]
        }
      }
    },
    {
      "name": "Get Todos",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "{{JWT_TOKEN}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/todos",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["todos"]
        }
      }
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "{{JWT_TOKEN}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/todo/{{TODO_ID}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["todo","{{TODO_ID}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "JWT_TOKEN",
      "value": ""
    },
    {
      "key": "TODO_ID",
      "value": ""
    }
  ]
}
